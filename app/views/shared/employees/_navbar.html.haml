%nav.navbar.navbar-light.bg-light.navbar-expand-lg.bg-body-tertiary
  .container
    - if employee_signed_in?
      = link_to "ExtraHIREdinary", root_path, class: "navbar-brand fw-bold text-dark"

      %button.navbar-toggler{"aria-controls" => "navbarText", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-bs-target" => "#navbarText", "data-bs-toggle" => "collapse", type: "button"}
        %span.navbar-toggler-icon

      #navbarText.collapse.navbar-collapse
        %ul.navbar-nav.mb-2.mb-lg-0.mx-auto.justify-content-center
          %li.nav-item
            = link_to "Dashboard", authenticated_employee_root_path, class: "nav-link"

          %li.nav-item
            = link_to "Edit Profile", edit_employee_registration_path, class: "nav-link"

          %li.nav-item
            %a.nav-link{:href => "#"} Get Premium

          %div.d-block.d-lg-none.mt-2
            = button_tag(type: "button", class: "btn btn-dark w-100", "data-toggle": "button") do
              - link_to "Sign Out", destroy_employee_session_path, style: "color: white; text-decoration: none"

        %div.d-none.d-lg-block
          = button_tag(type: "button", class: "btn btn-dark btn-sm", "data-toggle": "button") do
            - link_to "Sign Out", destroy_employee_session_path, style: "color: white; text-decoration: none"

    - else
      = render "shared/unauth_navbar"
