%nav.navbar.navbar-light.bg-light.navbar-expand-lg.bg-body-tertiary
  .container
    = link_to "ExtraHIREdinary", root_path, class: "navbar-brand fw-bold text-dark"

    %button.navbar-toggler{"aria-controls" => "navbarText", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-bs-target" => "#navbarText", "data-bs-toggle" => "collapse", type: "button"}
      %span.navbar-toggler-icon

    #navbarText.collapse.navbar-collapse
      - if user_signed_in?
        %ul.navbar-nav.mb-2.mb-lg-0.mx-auto.justify-content-center
          %li.nav-item
            %a.nav-link.active{"aria-current" => "page", href: "#"} Dashboard

          %li.nav-item
            = link_to "Edit Profile", edit_user_registration_path, class: "nav-link"

          %li.nav-item
            %a.nav-link{href: "#"} Get Premium

          %div.d-block.d-lg-none.mt-2
            = link_to "Sign Out", destroy_user_session_path, class: "btn btn-dark w-100"

        %div.d-none.d-lg-block
          = link_to "Sign Out", destroy_user_session_path, class: "btn btn-dark btn-sm", "data-toggle": "button"

      - else
        %ul.navbar-nav.mb-2.mb-lg-0.mx-auto.justify-content-center
          %li.nav-item
            %a.nav-link.active{"aria-current" => "page", href: "#"} Home

          %li.nav-item
            %a.nav-link{href: "#"} Features

          %li.nav-item
            %a.nav-link{href: "#"} Pricing

          %div.d-block.d-lg-none.mt-2
            = link_to "Sign Up", new_user_registration_path, class: "btn btn-dark w-100"

        %div.d-none.d-lg-block
          = link_to "Sign Up", new_user_registration_path, class: "btn btn-dark btn-sm", "data-toggle": "button"



