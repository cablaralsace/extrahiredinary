.d-flex.justify-content-center.pb-5
  .container.border.rounded.m-5.col-lg-6
    %h2.text-center.fw-bold.m-4
      Sign up for ExtraHIREdinary

    = simple_form_for resource,
        as: resource_name,
        url: registration_path(resource_name),
        method: :post,
        html: { class: "m-5" } do |form|

      -# = render "devise/shared/error_messages", resource: resource

      .row
        .field.col-lg-6
          = form.input :first_name,
              label: "First Name",
              required: false,
              label_html: { class: "form-label" },
              input_html: { class: "mb-2 form-control",
                            type: "text" }

        .field.col-lg-6
          = form.input :last_name,
              label: "Last Name",
              required: false,
              label_html: { class: "form-label" },
              input_html: { class: "mb-2 form-control",
                            type: "text" }
      .row
        .field
          = form.input :email,
              label: "Email Address",
              required: true,
              label_html: { class: "form-label" },
              input_html: { class: "mb-2 form-control",
                            type: "email", autocomplete: "email" }

      .row
        .field.col-lg-6
          = form.input :password,
              label: "Password",
              required: true,
              label_html: { class: "form-label" },
              input_html: { class: "mb-2 form-control",
                            type: "password", autocomplete: "new-password" },
              hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
              hint_html: { class: "form-label" }

        .field.col-lg-6
          = form.input :password_confirmation,
              label: "Confirm Password",
              required: true,
              label_html: { class: "form-label" },
              input_html: { class: "mb-2 form-control",
                            type: "password", autocomplete: "new-password" }

      = form.button :submit, "Create Account",
            class: "btn btn-form btn-dark w-100 mt-2"

      %p.text-left.text-muted.mt-4
        = render "devise/shared/links"
