.d-flex.justify-content-center.pb-5
  .container.border.rounded.m-5.col-lg-6
    %h2.text-center.fw-bold.m-4
      Edit
      = resource_name.to_s.humanize
      Profile

    = simple_form_for resource,
        as: resource_name,
        url: registration_path(resource_name),
        method: :put,
        html: { class: "m-3" } do |form|

      -# = render "devise/shared/error_messages", resource: resource

      .row
        .field
          = form.input :email,
              label: "Email Address",
              required: true,
              label_html: { class: "form-label" },
              input_html: { class: "mb-2 form-control",
                            type: "email", autocomplete: "email" }

      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}

      .row
        .field.col-lg-6
          = form.input :password,
              label: "New Password",
              required: false,
              label_html: { class: "form-label" },
              input_html: { class: "mb-2 form-control",
                            type: "password", autocomplete: "new-password" },
              hint: ( "Leave blank if you don't want to change it." ),
              hint_html: { class: "form-label" }

        .field.col-lg-6
          = form.input :password_confirmation,
              label: "Confirm Password",
              required: false,
              label_html: { class: "form-label" },
              input_html: { class: "mb-2 form-control",
                            type: "password", autocomplete: "new-password" }
      .row
        .field
          = form.input :current_password,
              label: "Current Password",
              required: true,
              label_html: { class: "form-label" },
              input_html: { class: "mb-2 form-control",
                            type: "password", autocomplete: "current-password" },
              hint: ( "We need your current password to confirm your changes." ),
              hint_html: { class: "form-label" }

      = form.button :submit, "Save Changes",
            class: "btn btn-form btn-warning w-100 mt-2"

      -# %p.text-left.text-muted.mt-4
        -# Already have an account?
        -# = render "devise/shared/links"

      = link_to "Return to Dashboard", :back, class: "btn btn-primary w-100 mt-2 mb-3 "
