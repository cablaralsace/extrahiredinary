.d-flex.justify-content-center.pb-5
  .container.border.rounded.m-5.col-lg-6
    %h2.text-center.fw-bold.m-4
      Forgot Your Password?

    = simple_form_for resource,
        as: resource_name,
        url: password_path(resource_name),
        method: :post,
        html: { class: "m-5" } do |form|

      .field
        = form.input :email,
            label: "Email Address",
            required: true,
            label_html: { class: "form-label" },
            input_html: { class: "mb-2 form-control",
                          type: "email", autocomplete: "email" }

      = form.button :submit, "Send me passwords reset instructions",
            class: "btn btn-form btn-warning w-100"

      %p.text-left.mt-4
        = render "devise/shared/links"
