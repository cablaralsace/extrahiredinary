.d-flex.justify-content-center.pb-5
  .container.border.rounded.m-5.col-lg-6
    %h2.text-center.fw-bold.m-4
      EMPLOYEE Registration

    = simple_form_for resource,
        as: resource_name,
        url: registration_path(resource_name),
        method: :post,
        html: { class: "m-5" } do |form|

      .row
        .field
          = form.input :first_name,
              label: "First Name",
              required: true,
              label_html: { class: "form-label" },
              input_html: { class: "mb-2 form-control",
                            type: "text" }

      .row
        .field.col-lg-6
          = form.input :middle_name,
              label: "Middle Name",
              required: true,
              label_html: { class: "form-label" },
              input_html: { class: "mb-2 form-control",
                            type: "text" }

        .field.col-lg-6
          = form.input :last_name,
              label: "Last Name",
              required: true,
              label_html: { class: "form-label" },
              input_html: { class: "mb-2 form-control",
                            type: "text" }
      .row
        .field
          = form.input :date_of_birth,
              label: "Date of Birth",
              required: true,
              start_year: Date.today.year - 40,
              end_year: Date.today.year,
              discard_day: false,
              order: [:month, :day, :year],
              label_html: { class: "form-label" },
              input_html: { class: "mb-2 form-control",
                            type: "datetime" }

      .row
        .field.col-lg-7
          = form.input :email,
              label: "Email Address",
              required: true,
              label_html: { class: "form-label" },
              input_html: { class: "mb-2 form-control",
                            type: "email", autocomplete: "email" }

        .field.col-lg-5
          = form.input :contact_number,
              label: "Contact Number",
              required: true,
              label_html: { class: "form-label" },
              input_html: { class: "mb-2 form-control",
                            type: "text" }

      .row
        .field
          = form.input :education,
              label: "Highest Educational Attainment",
              collection: Employee::EDUCATION.map{|key| [ I18n.t("employee.education.#{key}"), key ]},
              required: true,
              label_html: { class: "form-label" },
              input_html: { class: "mb-2 form-control",
                            type: "text" }

      .row
        .field
          = form.input :work_experience,
              label: "Work Experience",
              collection: Employee::WORK_EXPERIENCE.map{|key| [ I18n.t("employee.work_experience.#{key}"), key ]},
              required: true,
              label_html: { class: "form-label" },
              input_html: { class: "mb-2 form-control",
                            type: "text" }

      .row
        .field
          = form.input :role,
              label: "Role",
              required: true,
              label_html: { class: "form-label" },
              input_html: { class: "mb-2 form-control",
                            type: "text" }

      .row
        .field
          = form.input :character_references,
              label: "Character References",
              required: false,
              label_html: { class: "form-label" },
              input_html: { class: "mb-2 form-control",
                            type: "text" }
      .row
        .field.col-lg-6
          = form.input :password,
              label: "Password",
              required: true,
              label_html: { class: "form-label" },
              input_html: { class: "mb-2 form-control",
                            type: "password", autocomplete: "new-password" },
              hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
              hint_html: { class: "form-label" }

        .field.col-lg-6
          = form.input :password_confirmation,
              label: "Confirm Password",
              required: true,
              label_html: { class: "form-label" },
              input_html: { class: "mb-2 form-control",
                            type: "password", autocomplete: "new-password" }

      .row
        .field
          = form.input :file,
              label: "Upload Resume File",
              required: true,
              label_html: { class: "form-label" },
              input_html: { class: "mb-2 form-control",
                            type: "file" }

      = form.button :submit, "Create Account",
            class: "btn btn-form btn-dark w-100 mt-2"

      %p.text-left.text-muted.mt-4
        = render "employees/shared/links"
