.container.rounded.bg-white
  .row
    .col-md-3
      .d-flex.flex-column.align-items-center.text-center.p-2.py-5
        %img.rounded-circle{:src => "https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg", :width => "150px"}/

        %p.fw-bold.my-0
          = @user.full_name

        %p.my-0
          User ID:
          = @user.id
        %span

    .col-md-9.p-4
      .py-5
        .d-flex.justify-content-between.align-items-center
          %h4.text-right
            Profile Information

        %hr

        .row.mt-3
          .col-md-6
            %p.fw-bold.m-2
              First Name
            %fieldset.border.rounded.p-2.m-2
              = @user.first_name


          .col-md-6
            %p.fw-bold.m-2
              Last Name
            %fieldset.border.rounded.p-2.m-2
              = @user.last_name

        .row.mt-3
          .col
            %p.fw-bold.m-2
              Email Address
            %fieldset.border.rounded.p-2.m-2
              = @user.email


        .d-flex.mt-5.align-items-left
          = button_tag(type: "button", class: "btn btn-primary", "data-toggle": "button") do
            - link_to "Edit Profile", edit_user_registration_path, style: "color: white; text-decoration: none"
