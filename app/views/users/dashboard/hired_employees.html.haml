.container
  %h1.mt-5
    Welcome to your Dashboard!

  %p
    See all employees and current statuses below.

  .table-responsive.my-5
    %table.table.table-hover
      %thead.table-dark
        %tr
          %th{ scope: "col" } Full Name

          %th{ scope: "col" } Email

          %th{ scope: "col" } Status

          %th{ scope: "col" } Details

          %th{ scope: "col" } View Resume

      %tbody
        - @employees.each do |employee|
          %tr
            %td
              = employee.full_name

            %td
              = employee.email

            %td
              = t("employment_event.status.#{employee.employment_events.last.status}")

            %td
              = link_to "View Details", employee_path(employee.id), class: "btn btn-dark btn-sm m-1"

            %td
              / Button trigger modal
              %button.btn.btn-primary.btn-sm.m-1{"data-bs-target" => "#exampleModal", "data-bs-toggle" => "modal", type: "button"}
                View Resume
              / Modal
              #exampleModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", tabindex: "-1"}
                .modal-dialog.modal-dialog-centered.modal-dialog-scrollable.modal-fullscreen
                  .modal-content
                    .modal-header
                      %h5#exampleModalLabel.modal-title
                        RESUME

                      %button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "modal", type: "button"}

                    .modal-body
                      %object{ data: url_for(employee.file), height: "600px", type: "application/pdf", width: "100%" }

                    .modal-footer
                      %button.btn.btn-secondary{ "data-bs-dismiss" => "modal", :type => "button" } Close

    = link_to "View All Applicants", authenticated_user_root_path, class: "btn btn-sm btn-dark"
